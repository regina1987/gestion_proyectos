<h1 class="text-center m-4 text-dark strong">Tu nuevo proyecto</h1>

<div class="text-center m-4 " id="create_posts">


<div class=" m-4 p-4">
<%= form_with(model: @post, local: true) do |f| %>
<% if @post.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

    <ul>
    <% @post.errors.messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<div class="form-group pb-2">
<%= f.label :name %>
<%= f.text_field :name %>
</div>
   <div class="form-group pb-2">
<%= f.label :description %>
<%= f.text_area :description %>
</div>
   <div class="form-group pb-2">
<%= f.label :begin_at %>
<%= f.date_field :begin_at %>
</div>
   <div class="form-group pb-2">
<%= f.label :end_at %>
<%= f.date_field:end_at %>
</div>
   <div class="form-group pb-2">
<%= f.label :status %>
<%= f.select :status, options_for_select(['propuesta','en progreso', 'terminado'], 'propuesta')%>
</div>
<%= f.submit 'Guardar' %>

<% end %>
</div>
</div>
<h3><%= link_to "Inicio", root_path %></h3>
<h3><%= link_to "Dashboard", proyectos_dashboard_path %></h3>
